  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug stub service",
      "type": "lldb",
      "request": "launch",
      "cargo": {
        "args": [
          "build",
          "--bin=stub_service",
          "--package=stub_service"
        ],
        "filter": {
          "name": "stub_service",
          "kind": "bin"
        }
      },
      "args": [],
      "env": {
        "STUB_SERVICE_OUTPUT_DIR": "${workspaceFolder}/src/"
      },
      "cwd": "${workspaceFolder}",
      "sourceLanguages": [
        "rust"
      ],
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'stub_service'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=stub_service",
          "--package=stub_service"
        ],
        "filter": {
          "name": "stub_service",
          "kind": "bin"
        }
      },
      "args": [],
      "env": {
        "STUB_SERVICE_OUTPUT_DIR": "${workspaceFolder}/src/"
      },
      "cwd": "${workspaceFolder}",
      "sourceLanguages": [
        "rust"
      ],
    }
  ]
}